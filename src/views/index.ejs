<!DOCTYPE html>
<html lang="en">


<title>Home-Productos en Oferta</title> 
<%- include('./partials/head.ejs') %>

<body>

   <%- include('./partials/header')%>

    <main>

        <h1 class="titulares-home">Ofertas semanales</h1>

        <section class="section-home">
            
<% products.forEach(product => { %>
 
            <a class="tarjeta" href="/products/productDetail/<%= product.id %> ">
                <article class="articulo-destacado">
                    <img class="imagen-home" src="/images/products/<%= product.image %>" alt="">
                    <p class="descripcion"><%= product.name %></p>
                    <p class="descripcion">$<%= product.price %></p>
                </article>
            </a>
            
            <% }) %>


    </main>

    <%- include('./partials/footer.ejs') %>

</body>

</html>